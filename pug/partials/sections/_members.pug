transition-group(name="members" tag="section" enter-active-class="animated animated-entrance bounceInUp" leave-active-class="animated bounceOutUp")
  .bills(v-if="my.view == 'members'" v-cloak v-bind:key="0")
    .inner
      h4.bills-heading(v-on:click="stateSupportShow = !stateSupportShow;") State Legislation we are Supporting
      transition(v-on:enter="slideDown" v-on:leave="slideUp")
        .bill-list(v-if="stateSupportShow")
          .bill(v-for="bill in stateSupport")
            a.bill-title(v-on:click="openLink(bill.billLink, '_system');" href="#") {{bill.billTitle}}
            span.bill-custom-name(v-if="bill.billCustomName") {{bill.billCustomName}}
            p.bill-author
              a.bill-author--name(v-on:click="openLink(bill.billAuthorLink, '_system');" href="#") {{bill.billAuthorName}}
              span.bill-author--party(v-bind:class="bill.billAuthorParty") {{bill.billAuthorParty}}
            p {{bill.description}}
            a.email-button(:href="emailLink(bill.emailTitle, bill.emailBody)" class="button" v-if="bill.emailBody") Email Congress about this bill
      h4.bills-heading(v-on:click="stateOpposeShow = !stateOpposeShow;") State Legislation we are Opposing
      transition(v-on:enter="slideDown" v-on:leave="slideUp")
        .bill-list(v-if="stateOpposeShow")
          .bill(v-for="bill in stateOppose")
            a.bill-title(v-on:click="openLink(bill.billLink, '_system');" href="#") {{bill.billTitle}}
            span.bill-custom-name(v-if="bill.billCustomName") {{bill.billCustomName}}
            p.bill-author
              a.bill-author--name(v-on:click="openLink(bill.billAuthorLink, '_system');" href="#") {{bill.billAuthorName}}
              span.bill-author--party(v-bind:class="bill.billAuthorParty") {{bill.billAuthorParty}}
            p {{bill.description}}
            a.email-button(:href="emailLink(bill.emailTitle, bill.emailBody)" class="button" v-if="bill.emailBody") Email Congress about this bill
      h4.bills-heading(v-on:click="stateMonitorShow = !stateMonitorShow;") State Legislation we are Monitoring
      transition(v-on:enter="slideDown" v-on:leave="slideUp")
        .bill-list(v-if="stateMonitorShow")
          .bill(v-for="bill in stateMonitor")
            a.bill-title(v-on:click="openLink(bill.billLink, '_system');" href="#") {{bill.billTitle}}
            span.bill-custom-name(v-if="bill.billCustomName") {{bill.billCustomName}}
            p.bill-author
              a.bill-author--name(v-on:click="openLink(bill.billAuthorLink, '_system');" href="#") {{bill.billAuthorName}}
              span.bill-author--party(v-bind:class="bill.billAuthorParty") {{bill.billAuthorParty}}
            p {{bill.description}}
            a.email-button(:href="emailLink(bill.emailTitle, bill.emailBody)" class="button" v-if="bill.emailBody") Email Congress about this bill
  .schedule(v-if="my.view == 'members'" v-cloak v-bind:key="1")
    .inner
      h4.schedule-heading(v-on:click="scheduleShow = !scheduleShow") 2018 CNIGA Schedule
      transition(v-on:enter="slideDown" v-on:leave="slideUp")
        .schedule-items(v-if="scheduleShow")
          .schedule-item(v-for="item in schedule")
            h5 {{item.title}}
            date {{item.datetime}}
            p(v-if="item.location") Location: {{item.location}} 
              span(v-if="item.street_address") - {{item.street_address}} 
              span(v-if="item.city") {{item.city}}, 
              span(v-if="item.state") {{item.state}} 
              span(v-if="item.zip") {{item.zip}}
            p(v-if="item.description") {{item.description}}
